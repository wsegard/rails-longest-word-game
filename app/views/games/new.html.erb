<h1>New game!</h1>
<div class="container">
  <div class="row">
    <% @letters.each do |x| %>
    <div class = "col-sm-1"> <%= x %> </div>
    <% end %>
  </div>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="Your word">
  <input type="submit">
</form>
